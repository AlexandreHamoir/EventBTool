\usepackage[T1]{fontenc}    % Ignored when using xelatex
\usepackage[utf8]{inputenc} % Ignored when using xelatex
\usepackage{bsymb} % Standard latex symbols for Event-B formulas.
\usepackage{calc}  % Improve latex calculation abilities.
\usepackage{parskip} % Use parskip, instead of line-indent for new paragraphs.
\usepackage{graphicx} % Include graphics.
\graphicspath{ {$PATH_TO_IMAGES$} } % Points to workspace directory to find images.
\usepackage{xltabular} % Advanced tabular command.
\usepackage{tikz} % Draw icons for (a) (i) (r) (u)
\usepackage{xcolor} % Specify colors
\usepackage{makeidx} % Index generation
\usepackage[margin=3cm]{geometry} % Set margins.
\usepackage[explicit]{titlesec} % Used to tweak table of contents and sections.
\usepackage{varwidth} % For the varwidth minipage environment.
\usepackage{adjustbox} % Minimum sized box.
\usepackage{relsize} % Increase/Decrease font sizes

